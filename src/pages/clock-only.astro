---
import FlipdownClock from "../components/FlipdownClock.astro";
---
<link rel="stylesheet" href="https://pbutcher.uk/flipdown/css/flipdown/flipdown.css"/>
<script defer src="https://pbutcher.uk/flipdown/js/flipdown/flipdown.js"></script>
<FlipdownClock />

<style is:global>
  body {
    background-color: rgb(0 0 0 / 0.01);
    display: grid;
    place-content: center;
    height: 100vh;
  }

  #flipdown {
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    background-color: rgb(233 237 244 / 75%);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.125);
    padding: 10px 20px 20px;
    width: fit-content;
    transform: scale(2) translateX(0) !important;
  }

  #flipdown > div:nth-child(1),
  #flipdown > div:nth-child(2) {
    display: none;
  }
</style>
